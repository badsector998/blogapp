<%= form_with model: [ @article, @article.comments.build ], local: true do |form| %>
  <div class="container mt-4 mb-5 p-4 border rounded">
    <h4 class="mb-4">Add a Comment</h4>
    
    <!-- Commenter Input -->
    <div class="form-group">
      <%= form.label "Your Name", class: 'form-label' %>
      <%= form.text_field :commenter, class: 'form-control', placeholder: 'Your name', required: true %>
    </div>

    <!-- Body Input -->
    <div class="form-group">
      <%= form.label :body, class: 'form-label' %>
      <%= form.text_area :body, rows: 4, class: 'form-control', placeholder: 'Your comment', required: true %>
    </div>

    <!-- Status Select -->
    <% if admin_signed_in? %>
      <div class="form-group">
        <%= form.label :status, class: 'form-label' %>
        <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: 'form-control' %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="form-group mt-4 mb-0">
      <%= form.submit 'Post Comment', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

